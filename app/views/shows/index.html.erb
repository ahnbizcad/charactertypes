<h1>Listing shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Number of Characters</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.title, show %></td>
        <td><%= show.show_type %></td>
        <td><%= show.characters_count %></td>

        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Delete', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path %><br />
